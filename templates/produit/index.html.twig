{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }

    </style>

</head>
<body>



<div class="topnav">
    <a class="active" href="/home">Home</a>
    <a href="{{ path('produit_index') }}">Produit</a>
    <a href="{{ path('categorie_index') }}">Categorie</a>
</div>

    <style>
        body{
            background-image: url("https://www.studyrama.com/IMG/arton102764.png");
            background-repeat: no-repeat;
            background-size: cover;
        }

    </style>
    <h1>Produit index</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.NomProduit }}</td>

                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
